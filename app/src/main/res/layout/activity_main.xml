<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random Color"
        android:onClick="clickRandomButton"
        android:id="@+id/randomButton"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:text="255"
        android:id="@+id/redInput"
        android:layout_below="@+id/randomButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <EditText
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:text="255"
        android:id="@+id/greenInput"
        android:layout_below="@+id/redInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:text="255"
        android:id="@+id/blueInput"
        android:layout_below="@+id/greenInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:text="#FFFFFF"
        android:id="@+id/hexInput"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/rgbButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R:"
        android:id="@+id/redLabel"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/randomButton"
        android:layout_toLeftOf="@+id/redInput"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="G:"
        android:id="@+id/greenLabel"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/redInput"
        android:layout_toLeftOf="@+id/greenInput"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B:"
        android:id="@+id/blueLabel"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/greenInput"
        android:layout_toLeftOf="@+id/blueInput"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HEX:"
        android:id="@+id/hexLabel"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/rgbButton"
        android:layout_toLeftOf="@+id/hexInput"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check RGB"
        android:onClick="clickRGBButton"
        android:id="@+id/rgbButton"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/blueInput"
        android:layout_centerHorizontal="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check HEX"
        android:onClick="clickHEXButton"
        android:id="@+id/hexButton"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/hexInput"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
